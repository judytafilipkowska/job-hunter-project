<hbs lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>

    <main>
      <form
        id="form"
        action="/signup-jobseeker"
        method="POST"
        enctype="multipart/form-data"
      >

        {{! <input type="radio" id="job_seeker" name="accountType" value="Job_seeker">
  <label for="job_seeker">Job seeker</label> }}

         
        <div class="form-floating mb-3" style="width: 25rem;">
          <input
            type="text"
            name="username"
            class="form-control"
            id="floatingInput"
            placeholder="username"
          />
          <label for="username">Username</label>
        </div>
        <div class="form-floating mb-3" style="width: 25rem;">
          <input
            type="email"
            name="email"
            class="form-control"
            id="floatingInput"
            placeholder="email"
          />
          <label for="email">E-mail</label>
        </div>
        <div class="form-floating mb-3" style="width: 25rem;">
          <input
            type="password"
            name="password"
            class="form-control"
            id="floatingInput"
            placeholder="password"
          />
          <label for="password">Password</label>
        </div>
        <div class="form-floating mb-3" style="width: 25rem;">
          <input
            type="text"
            name="firstName"
            class="form-control"
            id="floatingInput"
            placeholder="firstName"
          />
          <label for="firstName">First name</label>
        </div>
        <div class="form-floating mb-3" style="width: 25rem;">
          <input
            type="text"
            name="lastName"
            class="form-control"
            id="floatingInput"
            placeholder="lastName"
          />
          <label for="lastName">Last name</label>
        </div>
        <div class="form-floating mb-3" style="width: 25rem;">
          <input
            type="text"
            name="location"
            class="form-control"
            id="floatingInput"
            placeholder="location"
          />
          <label for="location">Location</label>
        </div>
        <div class="form-floating mb-3" style="width: 25rem;">
          <input
            type="file"
            name="addPicture"
            class="form-control"
            id="floatingInput"
            placeholder="addPicture"
          />
          <label for="picture"> Add picture</label>
        </div>
        <div class="form-floating mb-3" style="width: 25rem;">
          <input
            type="file"
            name="addResume"
            class="form-control"
            id="floatingInput"
            placeholder="addResume"
          />
          <label for="file"> Add resume</label>
        </div>

        <button type="submit" class="btn btn-secondary">Sign up</button>
      </form>

      {{! error message display: }}

      {{#if errorMessage}}
        <div class="error-message">{{errorMessage}}</div>
      {{/if}}
    </main>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</hbs>

