{{!-- Job seeker profile: About section with profile pic, another for resume, applied jobs if we can manage--}}
<!DOCTYPE hbs>
<hbs lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
<main>

<div class="container">
  <div class="row">
    <div class="col">
     {{#if isEmployer}}
<div class="card" style="width: 25rem;">
   <div class="card-header">
    About
  </div>
  <img src= {{user.addPicture}} alt="profile-pic" />
  <div class="card-body">
    <h5 class="card-text">{{user.firstName}} {{user.lastName}}</h5>
    <h6 class="card-text">{{user.companyName}}</h6>
    <p>{{user.location}}</p>
   
  </div>
</div>


{{else}}

<div class="card" style="width: 25rem;">
    <div class="card-header">
    About
  </div>
  <img src= {{user.addPicture}} alt="profile-pic" />
  <div class="card-body">
    <h5 class="card-text">{{user.firstName}} {{user.lastName}}</h5>
    <p>{{user.location}}</p>
  </div>
</div>

{{!--
<img src= {{user.addPicture}} alt="profile-pic" />
<p>{{user.firstName}} {{user.lastName}}</p>
<p>{{user.location}}</p>--}}

{{/if}}

    </div>
    <div class="col">

<div class="card" style="width: 25rem;">
  <div class="card-header">
    Details
  </div>
  <ul class="list-group list-group-flush">
      {{#if isEmployer}}
    <li class="list-group-item">My username:{{user.username}}</li>
    <li class="list-group-item">E-mail:{{user.email}}</li>
      {{else}}
    <li class="list-group-item">My username:{{user.username}}</li>
    <li class="list-group-item">E-mail:{{user.email}}</li> 
    <li class="list-group-item">Resume: {{user.addResume}}</li> 
    {{/if}}
  </ul>
</div>
 <br>
   
<div class="card" style="width: 25rem;">
  <div class="card-header">
    Shortcuts
  </div>
  {{#if isEmployer}}
  <p><a class="nav-link" href="jobs/job-panel">Access your job panel</a></p>
  <p><a class="nav-link" href="/jobs/add-job">Quick add</a></p>
   {{/if}}
 
</div>
   
    </div>
  </div>
  

</main>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>    
</body>
</hbs>