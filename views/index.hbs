{{#each foundedAll}}
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">{{this.position}}</h5>
      <h6 class="card-subtitle mb-2 text-muted">{{this.wage}}k
      </h6>
      <h6 class="card-subtitle mb-2 text-muted">{{this.location}}</h6>
      {{#if this.remote}}
        <h6 class="card-subtitle mb-2 text-muted">Remote</h6>
      {{/if}}
      <a href="/jobs/{{this._id}}/details" class="btn btn-primary">Details</a>
    </div>
  </div>
{{/each}}
