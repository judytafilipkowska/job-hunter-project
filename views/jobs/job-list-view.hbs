<div class="container" style="padding-top: 120px;">
  <div class="row">
    <div class="col" style="height:400px; overflow: auto;">
        <div class="card">
        {{#each jobList}}
        <div class="card-body">
            <h5 class="card-title">{{this.position}}</h5>
            <h6 class="card-subtitle mb-2 text-muted">{{this.description}}k</h6>
            <a href="/jobs/{{this._id}}/details" class="btn btn-secondary">Tell me more</a>
        </div>
        {{/each}}
    </div>
    </div>
    <div class="col">
        <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel" style="height: 400px;">
            <img src="/images/org.jpeg" class="d-block w-100" style="height: 400px;" alt="img">
          </div>
        </div>
    </div>
  </div>
 </div> 